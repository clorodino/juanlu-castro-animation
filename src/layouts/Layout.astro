---
import "@fontsource-variable/manrope";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href=`${baseUrl}/favicon.ico` />
    <meta name="generator" content={Astro.generator} />
    <title>Juanlu Castro - Animation</title>
    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body class="dark:bg-gray-900 dark:text-gray-300 px-4 overflow-x-hidden">
    <div
      class="px-4 items-center min-h-screen flex flex-col justify-between w-full"
    >
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "manrope", sans-serif;
  }
  body {
    background-color: white;
    display: flex;
    justify-content: center;
    color: #334155;
  }
</style>
