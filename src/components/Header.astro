---
import ToggleTheme from "./ToggleTheme.astro";
import NavLink from "./NavLink.astro";
---

<header class="flex justify-between w-full max-w-screen-xl items-center py-7">
  <a href="/">
    <img
      class="max-w-28 flex justify-center items-center"
      src="/src/assets/logo-jc.svg"
      alt="logo"
    />
  </a>
  <nav class="flex gap-8 items-center font-mono text-2xl tracking-wider">
    <NavLink link="/about" title="About" />
    <NavLink link="/" title="Work" />
    <ToggleTheme />
  </nav>
</header>
