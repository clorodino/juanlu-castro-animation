---
import ToggleTheme from "./ToggleTheme.astro";
import NavLink from "./NavLink.astro";
---

<header
  class="flex justify-between w-full max-w-screen-xl px-4 items-center py-7"
>
  <a href="/">
    <img
      class="max-w-28 flex justify-center items-center"
      src="/src/assets/logo-jc.svg"
      alt="logo"
    />
  </a>
  <nav class="flex gap-8 items-center font-semibold">
    <NavLink link="/about" title="About" />
    <NavLink link="/projects" title="Projects" />
    <NavLink link="/contact" title="Contact" />
    <ToggleTheme />
  </nav>
</header>
