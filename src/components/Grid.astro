---
interface Props {
  grid: number;
}
const { grid } = Astro.props;
---

<div
  class:list={[
    "gap-4 grid",
    grid === 1 ? "grid-cols-1" : "", 
    grid === 2 ? "grid-cols-1 md:grid-cols-2" : "",
    grid === 3 ? "grid-cols-1 sm:grid-cols-2 md:grid-cols-3" : "",
    grid === 4 ? "grid-cols-1 sm:grid-cols-2 md:grid-cols-4" : "",
  ]}
>
  <slot />
</div>

